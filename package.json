{
	"name": "wsc",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "pnpm run dev:all",
		"dev:all": "concurrently \"pnpm:dev:next\" \"pnpm:dev:codegen\"",
		"dev:next": "next dev",
		"dev:codegen": "pnpm run codegen:watch",
		"build": "pnpm run generate && next build",
		"start": "next start",
		"generate": "pnpm run db:generate && pnpm run codegen",
		"codegen": "graphql-codegen --config codegen.yml",
		"codegen:watch": "graphql-codegen --config codegen.yml --watch",
		"db:studio": "prisma studio --schema=./src/prisma/schema.prisma",
		"db:generate": "prisma generate --schema=./src/prisma/schema.prisma",
		"db:migrate": "prisma migrate dev --schema=./src/prisma/schema.prisma",
		"db:push": "prisma db push --schema=./src/prisma/schema.prisma",
		"db:reset": "prisma migrate reset --schema=./src/prisma/schema.prisma",
		"db:format": "prisma format --schema=./src/prisma/schema.prisma",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage",
		"test:ci": "jest --ci --coverage",
		"lint": "next lint --fix --dir src",
		"lint:fix": "eslint src --fix && pnpm format",
		"format": "prettier --write \"src/**/*.{ts,tsx,md}\"",
		"type-check": "tsc --noEmit",
		"ci": "pnpm run lint && pnpm run type-check && pnpm run test:ci"
	},
	"dependencies": {
		"@apollo/client": "^3.11.8",
		"@apollo/experimental-nextjs-app-support": "^0.11.7",
		"@apollo/server": "^4.11.0",
		"@as-integrations/next": "^3.1.0",
		"@auth/prisma-adapter": "^2.7.4",
		"@graphql-codegen/typescript-resolvers": "^4.4.0",
		"@graphql-tools/graphql-file-loader": "^8.0.8",
		"@graphql-tools/load": "^8.0.9",
		"@graphql-tools/load-files": "^7.0.0",
		"@graphql-tools/merge": "^9.0.14",
		"@graphql-tools/schema": "^10.0.7",
		"@prisma/client": "^5.21.0",
		"@radix-ui/react-slot": "^1.1.1",
		"@tanstack/react-query": "^5.59.15",
		"bcrypt": "^5.1.1",
		"bcryptjs": "^3.0.2",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"dotenv": "^16.4.5",
		"graphql": "^16.9.0",
		"jsonwebtoken": "^9.0.2",
		"lucide-react": "^0.473.0",
		"next-auth": "5.0.0-beta.25",
		"pg": "^8.13.0",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"tailwind-merge": "^2.6.0",
		"tailwindcss-animate": "^1.0.7"
	},
	"devDependencies": {
		"@graphql-codegen/cli": "^5.0.3",
		"@graphql-codegen/introspection": "^4.0.3",
		"@graphql-codegen/typescript": "^4.1.0",
		"@graphql-codegen/typescript-operations": "^4.3.0",
		"@graphql-codegen/typescript-react-apollo": "^4.3.2",
		"@graphql-eslint/eslint-plugin": "^3.20.1",
		"@jest/types": "^29.6.3",
		"@parcel/watcher": "^2.5.0",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/react": "^16.1.0",
		"@testing-library/user-event": "^14.5.2",
		"@types/bcrypt": "^5.0.2",
		"@types/bcryptjs": "^2.4.6",
		"@types/graphql": "^14.5.0",
		"@types/jest": "^29.5.14",
		"@types/jsonwebtoken": "^9.0.7",
		"@types/node": "^22.7.5",
		"@types/pg": "^8.11.10",
		"@types/react": "^18.3.11",
		"@types/react-dom": "^18.3.1",
		"@typescript-eslint/eslint-plugin": "^8.9.0",
		"@typescript-eslint/parser": "^8.9.0",
		"autoprefixer": "^10.4.20",
		"concurrently": "^9.1.2",
		"eslint": "^8",
		"eslint-config-next": "14.2.15",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-import": "^2.31.0",
		"graphql-tag": "^2.12.6",
		"jest": "^29.7.0",
		"jest-environment-jsdom": "^29.7.0",
		"jest-mock-extended": "4.0.0-beta1",
		"next": "15.1.3",
		"postcss": "^8.4.47",
		"prettier": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.8",
		"prisma": "^5.21.0",
		"tailwindcss": "^3.4.14",
		"ts-jest": "^29.2.5",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.6.3"
	},
	"prisma": {
		"schema": "src/prisma/schema.prisma"
	}
}
